{
    "id": "org.freedesktop.Bustle",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "bustle",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "bustle",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/bustle/-/releases/0.12.0/downloads/bustle-0.12.0.tar.xz",
                    "sha256": "b1c6217e4fc859eb69ac931d38b97b805b8d5b21fd1334d9a1be98606b189ee1",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/26802/releases/",
                        "version-query": ".[0].tag_name",
                        "url-query": ".[0].assets.links.[] | select(.name == \"bustle-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
